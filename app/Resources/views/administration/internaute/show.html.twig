{% extends 'index.html.twig' %}
{% block bandeau %}{% endblock %}
{% block principal %}
    <div class="row filter bordered">
        <div class="col-xs-offset-1 col-xs-7">
            <h1 class=" text-primary text-center">Données du profil</h1>
            <div>
                {#<label>Avatar :</label>#}
                <img class="card-small bordered" src="{{ asset(image_logo ~ internaute.avatar) }}" alt="avatar">
            </div>
            <div>
                <label>Nom :</label>
                {{ internaute.nom }}
            </div>
            <div>
                <label>Prénom :</label>
                {{ internaute.prenom }}
            </div>
            <div>
                <label>Inscription à la newsletter :</label>
                {% if internaute.inscriptionNewsletter %}Oui{% else %}Non{% endif %}
            </div>
            <div>
                <label>Date d'inscription :</label>
                {% if internaute.dateInscription %}{{ internaute.dateInscription|date('Y-m-d H:i:s') }}{% endif %}
            </div>
            {{ form_start(delete_form) }}
            <hr/>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="supprimer">
            </div>
            {{ form_end(delete_form) }}
            <div class=""><a href="{{ path('internaute_edit', { 'internauteSlug': internaute.internauteSlug }) }}">Editer <i class="fa fa-2x fa-pencil"></i></a></div>
        </div>
    </div>
{% endblock %}

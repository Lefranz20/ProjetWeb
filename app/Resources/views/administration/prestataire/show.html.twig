{% extends 'index.html.twig' %}
{% block bandeau %}{% endblock %}
{% block principal %}
    <div class="row filter bordered">
        <div class="col-xs-offset-1 col-xs-7 ">
            <h1 class=" text-primary">Données de l'Etablissement</h1>
            <div class="p15">
               <h1 class="page-title"> {{ prestataire.nomEntreprise}}</h1>
            </div>
            <div class="p15">
                <label class="text-capitalize">description :</label>
                {{ prestataire.description }}
            </div>
            <div class="p15">
                <label class="text-capitalize ">web :</label>
                {{ prestataire.web }}
            </div>
            <div class="p15">
                <label class="text-capitalize ">email de contact :</label>
                {{ prestataire.emailDeContact }}
            </div>
            <div class="p15">
                <label class="text-capitalize  ">téléphone :</label>
                {{ prestataire.telephone }}
            </div>
            <div class="p15">
                <label class="text-capitalize">numero de TVA :</label>
                {{ prestataire.numeroTva }}
            </div>
            <div class="p15">
                <label class="text-capitalize">logo :</label>
                <img class="img-thumbnail img-responsive" src="{{asset(image_logo ~ prestataire.logo)  }}" alt="Logo" height="200" width="200"/>
            </div>
            <div class="p15">
                <label class="text-capitalize ">Date d'inscription :</label>
                {% if prestataire.dateInscription %}{{ prestataire.dateInscription|date('Y-m-d H:i:s') }}{% endif %}
            </div>
            <hr/>
            <a href="{{ path('p_edit', { 'pretataireSlug': prestataire.pretataireSlug }) }}">Editer <i class="fa fa-2x fa-pencil"></i></a>
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Utilisateurs list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Ruenumero</th>
                <th>Rue</th>
                <th>Dateinscription</th>
                <th>Typeutilisateur</th>
                <th>Nombreessai</th>
                <th>Inscriptionconf</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for utilisateur in utilisateurs %}
            <tr>
                <td><a href="{{ path('utilisateur_show', { 'id': utilisateur.id }) }}">{{ utilisateur.id }}</a></td>
                <td>{{ utilisateur.rueNumero }}</td>
                <td>{{ utilisateur.rue }}</td>
                <td>{% if utilisateur.dateInscription %}{{ utilisateur.dateInscription|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ utilisateur.typeUtilisateur }}</td>
                <td>{{ utilisateur.nombreEssai }}</td>
                <td>{% if utilisateur.inscriptionConf %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('utilisateur_show', { 'id': utilisateur.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('utilisateur_edit', { 'id': utilisateur.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('utilisateur_new') }}">Create a new utilisateur</a>
        </li>
    </ul>
{% endblock %}

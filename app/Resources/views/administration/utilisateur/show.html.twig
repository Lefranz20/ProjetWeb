{% extends 'index.html.twig' %}
{% block bandeau %}{% endblock %}
{% block principal %}
    <div class="row filter bordered">
        <div class="col-xs-offset-1 col-xs-7">
            <h1 class=" text-primary text-center">Données personnelles</h1>
            <div>
                <label>Rue</label>
                {{ utilisateur.rue }}
            </div>
            <div>
                <label>Numero :</label>
                {{ utilisateur.rueNumero }}
            </div>
            <div>
                <label>Code postal :</label>
                {{ utilisateur.codePostal }}
            </div>
            <div>
                <label>Localité :</label>
                {{ utilisateur.localite }}
            </div>
            <div>
                <label>Province :</label>
                {{ utilisateur.province }}
            </div>
            <div>
                <label>Date d'inscription :</label>
                {% if utilisateur.dateInscription %}{{ utilisateur.dateInscription|date('Y-m-d H:i:s') }}{% endif %}
            </div>
            <div>
                <label>Typeutilisateur :</label>
                {{ utilisateur.typeUtilisateur }}
            </div>
            <div>
                <label>Nombre de tentative : </label>
                {{ utilisateur.nombreEssai }}
            </div>
            <div>
                <label>Inscription confimée : </label>
                {% if utilisateur.inscriptionConf %}OUI{% else %}NON{% endif %}
            </div>
            <hr/>
            <div class=""><a href="{{ path('utilisateur_edit', { 'userSlug': utilisateur.userSlug }) }}">Modifier</a></div>
        </div>
    </div>
{% endblock %}

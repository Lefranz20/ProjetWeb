{% extends 'layout.html.twig' %}
{% block bandeau %}{{ render(controller('AppBundle:Index:bandeau')) }}{% endblock %}
{% block recherche %}{{ render(controller('AppBundle:Index:recherche')) }}{% endblock %}

{% block connectedUserNav %}
    {% if (app.user) %}
        {% if (app.user.utilisateurs) %}
            {% if (app.user.utilisateurs.typeUtilisateur == 'prestataire') %}
                {% if (app.user.utilisateurs.prestataire)  %}
                    {% include ':includes:prestataire_menu.html.twig' %}
                {% endif %}
            {% elseif(app.user.utilisateurs.typeUtilisateur == 'internaute') %}
                {% if (app.user.utilisateurs.internautes)  %}
                    {% include ':includes:internaute_menu.html.twig' %}
                {% endif %}
            {% endif %}
        {% endif %}
    {% endif %}
{% endblock %}
{% block prestataires %}
    <h2> Nouveaux prestataires </h2>
    {{ render(controller('AppBundle:Index:prestataires')) }}
    <hr/>
    <h2>Service du Mois </h2>
    {{ render(controller('AppBundle:Index:serviceDuMois')) }}
{% endblock %}

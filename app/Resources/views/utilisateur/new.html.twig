{% extends 'layout.html.twig' %}

{% block principal %}
    <div class="row">
        <div class="col-xs-offset-1 col-xs-7">
            <h1 class=" text-primary text-center">Profil de {{ app.user }}.</h1>
            <p>Veuillez compléter votre profil</p>
            {{ form_start(form) }}

            <div class="form-group ">
                {{ form_label(form.nom,'Nom et prénom de l\'utilisateur') }}
                {{ form_widget(form.nom) }}
            </div>
            <div class="form-group ">
                {{ form_label(form.typeUtilisateur,'Type d\'utilisateur') }}
                {{ form_widget(form.typeUtilisateur) }}
            </div>
            <div class="form-group">
                {{ form_label(form.rue,'Rue') }}
                {{ form_widget(form.rue) }}
            </div>
            <div class="form-group">
                {{ form_label(form.rueNumero,'Rue N°') }}
                {{ form_widget(form.rueNumero) }}
            </div>
            <div class="form-group">
                {{ form_label(form.codePostal) }}
                {{ form_widget (form.codePostal)}}
            </div>
            <div class="form-group">
                {{ form_label(form.localite) }}
                {{ form_widget(form.localite) }}
            </div>
            <div>
                {{ form_label(form.province) }}
                {{ form_widget(form.province) }}
            </div>
            <hr/>
            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
